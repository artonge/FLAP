@reboot      flapctl setup cron > /dev/null
@reboot      flapctl setup ports > /dev/null

@midnight    flapctl update &> /var/log/flap/update.log

@hourly      flapctl healthcheck &> /var/log/flap/healthcheck.log
@hourly      flapctl setup ports > /dev/null

# Every minutes
* * * * *    flapctl tls handle_request &> /var/log/flap/tls.log
* * * * *    flapctl tls update_dns_records &> /var/log/flap/tls.log
