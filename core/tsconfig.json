{
	"compilerOptions": {
		"target": "ES2018",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./build",
		"inlineSourceMap": true,
		"removeComments": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"lib": ["ESNext"]
	}
}
