{
	"name": "flap-core",
	"version": "0.0.1",
	"description": "The core of a FLAP box.",
	"main": "build/main.js",
	"scripts": {
		"test": "jest --forceExit --coverage --verbose",
		"test:watch": "jest --watch",
		"start": "NODE_ENV=production node build/main.js",
		"build": "tsc",
		"serve": "PORT=8080 DEBUG=node-ssdp:* concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"tsc -w --removeComments false\" \"nodemon --inspect build/main.js\"",
		"debug": "PORT=8080 DEBUG=express:* concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"tsc -w --removeComments false\" \"nodemon --inspect build/main.js\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://gitlab.com/artonge/flap.git"
	},
	"keywords": [
		"flap",
		"core"
	],
	"author": "artonge",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://gitlab.com/artonge/flap/issues"
	},
	"homepage": "https://gitlab.com/artonge/flap#readme",
	"dependencies": {
		"@types/cheerio": "^0.22.10",
		"@types/jest": "^24.0.5",
		"body-parser": "^1.18.3",
		"cheerio": "^1.0.0-rc.2",
		"connect-redis": "^3.4.0",
		"core-js": "^3.0.0-beta.15",
		"express": "^4.16.4",
		"express-session": "^1.15.6",
		"helmet": "^3.15.0",
		"jest": "^24.1.0",
		"ldapjs": "^1.0.2",
		"node-ssdp": "^4.0.0",
		"passport": "^0.4.0",
		"passport-ldapauth": "^2.1.1",
		"ts-jest": "^23.10.5"
	},
	"devDependencies": {
		"@types/passport": "^1.0.0",
		"@types/express": "^4.16.0",
		"@types/express-session": "^1.15.11",
		"@types/ldapjs": "^1.0.3",
		"@types/node-ssdp": "^3.3.0",
		"concurrently": "^4.1.0",
		"nodemon": "^1.18.9",
		"typescript": "^3.2.2"
	}
}
